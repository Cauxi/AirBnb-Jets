<h1>Welcome <%= current_user.first_name %> to your Dashboard</h1>

<div class="container">
    <h1>All available jets</h1>
<% if !@jets.empty? %>
  <div class="cards">
    <% @jets.each do |jet| %>
      <% if jet.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path jet.photo.key, height: 300, crop: :fill %>')">
          <% else  %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1619652116813-98504fce82d2?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OHx8cHJpdmF0ZSUyMGpldHxlbnwwfHwwfHx8MA%3D%3D')">
          <% end %>
        <%= jet.name %>
      </div>
    <% end %>
  </div>
  </div>
<% end %>

<h2>You want to put a new jet to rent?</h2>
  <div class="creation">
  <%= link_to "New jet", new_jet_path %>
  </div>


<h2>Check the status of your bookings</h2>
<% @bookings.each do |booking| %>
  <ul>
    <li>Your booking with <%= booking.jet.name %>, from  <%= booking.start_date %> to <%= booking.end_date %> is: <%= booking.status%>. The total price is: <%= (booking.end_date - booking.start_date).to_i * booking.jet.price %>€.</li>
  </ul>
<% end %>


<h2>Manage the bookings to your jets</h2>
  <% @jets.each do |jet| %>
    <% jet.bookings.each do |booking| %>
    <ul>
      <li><%= booking.user.first_name %> wants to rent your <%= booking.jet.name %> from <%= booking.start_date %> to <%= booking.end_date %>. The total price is: <%= (booking.end_date - booking.start_date).to_i * jet.price %>€. Current status from this booking: <%= booking.status %>.</li>
      <% if booking.status == "pending" %>
        <li>You want to: <%= link_to "Accept", accept_path(booking), data: {turbo_method: :patch} %> or <%= link_to "Reject", reject_path(booking), data: {turbo_method: :patch} %> ?</li>
      <% else %>
        <li>The requester will receive an email about your decision. </li>
      <% end %>
    </ul>
    <% end %>
  <% end %>
