<div class="container">
  <h1>All available jets</h1>

<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: jets_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", city: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="cards">
  <% if @jets.any? %>
  <% @jets.each do |jet| %>
    <% if jet.photo.attached? %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path jet.photo.key, height: 300, crop: :fill %>')">
      <% end %>
      <%= link_to jet.name, jet_path(jet) %>
    </div>
  <% end %>
    <% else %>
    <h2>Sorry, no Jets Found.</h2>
  <% end %>
</div>
