<div class="container">
    <h1>All available jets</h1>

<div class="cards">
  <% @jets.each do |jet| %>
    <% if jet.photo.attached? %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path jet.photo.key, height: 300, crop: :fill %>')">
        <% else  %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1619652116813-98504fce82d2?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OHx8cHJpdmF0ZSUyMGpldHxlbnwwfHwwfHx8MA%3D%3D')">
        <% end %>
       <%= link_to jet.name, jet_path(jet) %>
    </div>
  <% end %>
</div>
</div>
