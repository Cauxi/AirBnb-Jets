<div class="container-show">
  <div class="card-trip">
    <% if @jet.photo.attached? %>
      <img src= <%= cl_image_path @jet.photo.key, height: 300, crop: :fill %> />
    <% else  %>
      <img src='https://images.unsplash.com/photo-1619652116813-98504fce82d2?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OHx8cHJpdmF0ZSUyMGpldHxlbnwwfHwwfHx8MA%3D%3D'/>
    <% end %>
    <div class="card-trip-infos">
          <div>
            <h2><%= @jet.name %></h2>
            <p><%= @jet.description %></p>
            <p><%= @jet.city %></p>
          </div>
          <h2 class="card-trip-pricing"><%= @jet.price %>â‚¬/day</h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
    </div>
      <div style="width: 70%; height: 502px;"
        data-controller="map"
        data-map-marker-value="<%= @marker.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  <div data-controller="toggle" class="mt-5">
   <button data-action="click->toggle#booking" class="btn btn-primary">Create a Booking</button>
    <div data-toggle-target="button" class="d-none mt-2">
      <%= simple_form_for [@jet, @booking] do |f| %>
        <%= f.input :start_date,
                    label: 'Booking Date',
                    as: :string,
                    input_html: { data: { controller: "datepicker" } } %>
        <%= f.submit "Submit booking", class: "btn btn-dark" %>
      <% end %>
  </div>
</div>
</div>
